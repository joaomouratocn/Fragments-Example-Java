<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    tools:showIn="@layout/fragment_recycle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/recycle_img_car"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/strImageCar"/>

        <TextView
            android:id="@+id/recycle_txt_brand"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_toEndOf="@id/recycle_img_car"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="Brand"
            tools:ignore="HardCodedText"/>

        <TextView
            android:id="@+id/recycle_txt_model"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_below="@id/recycle_txt_brand"
            android:layout_alignStart="@id/recycle_txt_brand"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="Model"
            tools:ignore="HardCodedText"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>